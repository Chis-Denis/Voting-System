@model ASP1.Backend.ViewModels.CandidateViewModel
@{
    ViewData["Title"] = "Create Candidate";
}

<h1 class="mb-4">Create Candidate</h1>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="card" style="background-color: #fef2f2; border-color: var(--danger-color); margin-bottom: var(--spacing-md);">
        <div class="card-body">
            <strong style="color: var(--danger-color);">There was a problem saving the candidate:</strong>
            <ul style="margin-top: var(--spacing-xs); color: var(--danger-color);">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    </div>
}

<div class="card shadow-md">
    <div class="card-body">
        <form asp-action="Create" method="post" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name">Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter candidate name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter candidate description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--spacing-md);">
                <div class="form-group">
                    <label asp-for="Age">Age</label>
                    <input asp-for="Age" class="form-control" type="number" min="18" max="120" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input asp-for="Position" class="form-control" placeholder="e.g., Deputat, Senator" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <input type="text" name="fake-party-autofill" style="display:none" autocomplete="off" />
            <div class="form-group">
                <label asp-for="PartyName">Party Name</label>
                <input asp-for="PartyName" class="form-control" autocomplete="off" placeholder="Enter party name (optional)" />
                <span asp-validation-for="PartyName" class="text-danger"></span>
            </div>
            <div style="display: flex; gap: var(--spacing-sm); margin-top: var(--spacing-lg);">
                <button type="submit" class="btn btn-success">Create Candidate</button>
                <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

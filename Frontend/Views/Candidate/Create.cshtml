@model ASP1.Backend.ViewModels.CandidateViewModel
@{
    ViewData["Title"] = "Create Candidate";
}
<h1>Create Candidate</h1>
@* Start of change: Add visible error message block for debugging Candidate create *@
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="alert alert-danger">
        <strong>There was a problem saving the candidate:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
@* End of change: Add visible error message block for debugging Candidate create *@
@* Start of change: Add validation summary and anti-forgery token *@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form asp-action="Create" method="post" autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="form-group">    
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <!-- Dummy hidden field to defeat browser autofill -->
    <input type="text" name="fake-party-autofill" style="display:none" autocomplete="off" />
    <div class="form-group">
        <label asp-for="PartyName">Party</label>
        <input asp-for="PartyName" class="form-control" autocomplete="off" />
        <span asp-validation-for="PartyName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@* End of change: Add validation summary and anti-forgery token *@

@* Start of change: Ensure no CandidateId field in Create view *@
<!-- No CandidateId field here, as it is auto-generated by the database -->
@* End of change: Ensure no CandidateId field in Create view *@ 
@model ASP1.Backend.ViewModels.CandidateViewModel
@{
    ViewData["Title"] = "Candidate Details";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--spacing-lg);">
    <h1>Candidate Details</h1>
    <div style="display: flex; gap: var(--spacing-xs);">
        <a asp-action="Edit" asp-route-id="@Model.CandidateId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>

<div class="card shadow-md" style="max-width: 600px;">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div style="width: 100%; height: 300px; overflow: hidden; background: var(--bg-secondary);">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100%; height: 100%; object-fit: cover;" />
        </div>
    }
    <div class="card-body">
        <h2 class="card-title">@Model.Name</h2>
        <p class="card-text">@Model.Description</p>
        <div style="display: grid; gap: var(--spacing-sm); margin-top: var(--spacing-md);">
            <div style="display: flex; justify-content: space-between; padding: var(--spacing-sm); background: var(--bg-secondary); border-radius: var(--radius-md);">
                <strong>Party:</strong>
                <span>@(string.IsNullOrWhiteSpace(Model.PartyName) ? "Independent" : Model.PartyName)</span>
            </div>
            <div style="display: flex; justify-content: space-between; padding: var(--spacing-sm); background: var(--bg-secondary); border-radius: var(--radius-md);">
                <strong>Position:</strong>
                <span>@Model.Position</span>
            </div>
            <div style="display: flex; justify-content: space-between; padding: var(--spacing-sm); background: var(--bg-secondary); border-radius: var(--radius-md);">
                <strong>Age:</strong>
                <span>@Model.Age years</span>
            </div>
            <div style="display: flex; justify-content: space-between; padding: var(--spacing-sm); background: var(--bg-secondary); border-radius: var(--radius-md);">
                <strong>ID:</strong>
                <span>#@Model.CandidateId</span>
            </div>
        </div>
    </div>
</div>

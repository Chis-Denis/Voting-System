@model IEnumerable<ASP1.Backend.ViewModels.CandidateViewModel>
@{
    ViewData["Title"] = "Candidates";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--spacing-lg);">
    <h1>All Candidates</h1>
    <a asp-action="Create" class="btn btn-success">+ Create Candidate</a>
</div>

<div style="display: flex; gap: var(--spacing-sm); margin-bottom: var(--spacing-md);">
    <form asp-action="StartGenerating" method="post" style="display:inline;">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Start Generating</button>
    </form>
    <form asp-action="StopGenerating" method="post" style="display:inline;">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Stop Generating</button>
    </form>
</div>

<div class="card shadow-md">
    <div class="card-body" style="padding: 0;">
        <div style="overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Party</th>
                        <th>Position</th>
                        <th>Age</th>
                        <th style="text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var candidate in Model)
                    {
                        <tr>
                            <td><strong>@candidate.Name</strong></td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(candidate.PartyName))
                                {
                                    <span class="badge bg-info">@candidate.PartyName</span>
                                }
                                else
                                {
                                    <span class="text-secondary">Independent</span>
                                }
                            </td>
                            <td>@candidate.Position</td>
                            <td>@candidate.Age</td>
                            <td style="text-align: right;">
                                <div style="display: flex; gap: var(--spacing-xs); justify-content: flex-end;">
                                    <a asp-controller="Candidate" asp-action="Details" asp-route-id="@candidate.CandidateId" class="btn btn-primary btn-sm">Details</a>
                                    <a asp-action="Edit" asp-route-id="@candidate.CandidateId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@candidate.CandidateId" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

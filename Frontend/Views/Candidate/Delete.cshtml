@model ASP1.Backend.ViewModels.CandidateViewModel
@{
    ViewData["Title"] = "Delete Candidate";
}
<h1>Delete Candidate</h1>
<p>Are you sure you want to delete this candidate?</p>
@* Start of change: Candidate delete form *@
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CandidateId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@* End of change: Candidate delete form *@ 
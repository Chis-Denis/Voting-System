<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Romanian Voting System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Critical CSS - Load immediately - Minimalist Theme */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        html, body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #0f172a;
            color: #e2e8f0;
            line-height: 1.6;
            min-height: 100vh;
        }
        
        a {
            text-decoration: none !important;
            color: inherit;
        }
        
        a:hover {
            text-decoration: none !important;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }
        
        /* Navigation */
        .navbar {
            background: #1e293b;
            border-bottom: 1px solid #334155;
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.3);
        }
        
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #60a5fa !important;
        }
        
        .navbar-nav {
            display: flex;
            gap: 1rem;
            list-style: none;
            margin: 0;
            padding: 0;
        }
        
        .nav-link {
            color: #94a3b8 !important;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.2s;
            display: inline-block;
        }
        
        .nav-link:hover {
            color: #60a5fa !important;
            background-color: #334155;
        }
        
        .nav-link.active {
            color: #60a5fa !important;
            background-color: rgba(96, 165, 250, 0.15);
        }
        
        /* Buttons */
        .btn {
            display: inline-block;
            padding: 0.625rem 1.25rem;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            border: 1px solid transparent;
            cursor: pointer;
            text-decoration: none !important;
            transition: all 0.2s;
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        }
        
        .btn-primary {
            background-color: #2563eb;
            color: white !important;
            border-color: #2563eb;
        }
        
        .btn-primary:hover {
            background-color: #1e40af;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }
        
        .btn-outline-primary {
            background-color: transparent;
            color: #2563eb !important;
            border-color: #2563eb;
        }
        
        .btn-outline-primary:hover {
            background-color: #2563eb;
            color: white !important;
        }
        
        .btn-success {
            background-color: #10b981;
            color: white !important;
            border-color: #10b981;
        }
        
        .btn-success:hover {
            background-color: #059669;
        }
        
        .btn-info {
            background-color: #06b6d4;
            color: white !important;
            border-color: #06b6d4;
        }
        
        .btn-info:hover {
            background-color: #0891b2;
        }
        
        .btn-warning {
            background-color: #f59e0b;
            color: white !important;
            border-color: #f59e0b;
        }
        
        .btn-danger {
            background-color: #ef4444;
            color: white !important;
            border-color: #ef4444;
        }
        
        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.8125rem;
        }
        
        /* Cards */
        .card {
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 0.75rem;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.3);
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background-color: #0f172a;
            border-bottom: 1px solid #334155;
            padding: 1.5rem;
            font-weight: 600;
            font-size: 1.25rem;
            color: #e2e8f0;
        }
        
        .card-body {
            padding: 1.5rem;
            color: #cbd5e1;
        }
        
        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #e2e8f0;
        }
        
        .card-text {
            color: #94a3b8;
            margin-bottom: 1rem;
        }
        
        .shadow-sm {
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        }
        
        .shadow-md {
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }
        
        /* Tables */
        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: #1e293b;
        }
        
        .table thead {
            background-color: #0f172a;
        }
        
        .table th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #94a3b8;
            border-bottom: 2px solid #334155;
        }
        
        .table td {
            padding: 1rem;
            border-bottom: 1px solid #334155;
            color: #cbd5e1;
        }
        
        .table tbody tr:hover {
            background-color: #334155;
        }
        
        .table tbody tr:last-child td {
            border-bottom: none;
        }
        
        /* Badges */
        .badge {
            display: inline-block;
            padding: 0.25rem 0.625rem;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 0.375rem;
        }
        
        .bg-success {
            background-color: #10b981;
            color: white;
        }
        
        .bg-info {
            background-color: #06b6d4;
            color: white;
        }
        
        .bg-warning {
            background-color: #f59e0b;
            color: white;
        }
        
        .bg-secondary {
            background-color: #64748b;
            color: white;
        }
        
        /* Typography */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 600;
            color: #e2e8f0;
            margin-bottom: 1rem;
        }
        
        h1 {
            font-size: 2.5rem;
        }
        
        h2 {
            font-size: 2rem;
        }
        
        h3 {
            font-size: 1.75rem;
        }
        
        .lead {
            font-size: 1.125rem;
            color: #94a3b8;
            font-weight: 400;
        }
        
        .text-center {
            text-align: center;
        }
        
        .text-secondary {
            color: #94a3b8;
        }
        
        strong {
            color: #e2e8f0;
        }
        
        .mb-3 {
            margin-bottom: 1rem;
        }
        
        .mb-4 {
            margin-bottom: 1.5rem;
        }
        
        .mb-5 {
            margin-bottom: 3rem;
        }
        
        /* Footer */
        .footer {
            background: #1e293b;
            border-top: 1px solid #334155;
            padding: 1.5rem 0;
            margin-top: 3rem;
            text-align: center;
            color: #94a3b8;
            font-size: 0.875rem;
        }
        
        .footer a {
            color: #60a5fa !important;
        }
        
        .footer a:hover {
            text-decoration: underline !important;
        }
        
        /* Main Content */
        .main-content {
            flex: 1;
            padding: 2rem 0;
        }
        
        /* Button Groups */
        .btn-group {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        
        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1.5rem;
            color: #94a3b8;
        }
        
        .empty-state-icon {
            font-size: 3rem;
            color: #475569;
            margin-bottom: 1rem;
        }
        
        /* Forms */
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-control {
            display: block;
            width: 100%;
            padding: 0.625rem 0.875rem;
            font-size: 0.875rem;
            line-height: 1.5;
            color: #e2e8f0;
            background-color: #0f172a;
            border: 1px solid #334155;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }
        
        .form-control:focus {
            outline: none;
            border-color: #60a5fa;
            box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.2);
            background-color: #1e293b;
        }
        
        .form-control:read-only {
            background-color: #0f172a;
            cursor: not-allowed;
            opacity: 0.7;
        }
        
        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #cbd5e1;
        }
        
        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        
        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }
        
        /* Utilities */
        .fw-bold {
            font-weight: 600;
        }
        
        small {
            font-size: 0.875rem;
            color: #94a3b8;
        }
        
        strong {
            font-weight: 600;
            color: #e2e8f0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">🗳️ Romanian Voting</a>
                    <ul class="navbar-nav">
                        <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Party" ? "active" : "")" asp-area="" asp-controller="Party" asp-action="Index">Parties</a></li>
                        <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Candidate" ? "active" : "")" asp-area="" asp-controller="Candidate" asp-action="Index">Candidates</a></li>
                        <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Statistics" ? "active" : "")" asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - Romanian Voting System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

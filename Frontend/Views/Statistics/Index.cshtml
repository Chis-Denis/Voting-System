@model ASP1.Backend.ViewModels.StatisticsViewModel
@{
    ViewData["Title"] = "Statistics";
}

<h1 class="mb-4">Election Statistics</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: var(--spacing-md); margin-bottom: var(--spacing-xl);">
    <div class="card shadow-md">
        <div class="card-body text-center">
            <div style="font-size: 3rem; color: var(--primary-color); margin-bottom: var(--spacing-sm);">ğŸ‘¥</div>
            <h2 style="font-size: 2.5rem; margin: 0; color: var(--text-primary);">@Model.TotalCandidates</h2>
            <p class="text-secondary" style="margin: 0;">Total Candidates</p>
        </div>
    </div>
    
    <div class="card shadow-md">
        <div class="card-body text-center">
            <div style="font-size: 3rem; color: var(--secondary-color); margin-bottom: var(--spacing-sm);">ğŸ›ï¸</div>
            <h2 style="font-size: 2.5rem; margin: 0; color: var(--text-primary);">@Model.TotalParties</h2>
            <p class="text-secondary" style="margin: 0;">Total Parties</p>
        </div>
    </div>
</div>

<h2 class="mb-4">Candidates per Party</h2>

<div class="card shadow-md">
    <div class="card-body" style="padding: 0;">
        <div style="overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Party Name</th>
                        <th style="text-align: right;">Candidate Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var party in Model.CandidatesPerParty)
                    {
                        <tr>
                            <td><strong>@party.PartyName</strong></td>
                            <td style="text-align: right;">
                                <span class="badge bg-primary">@party.CandidateCount</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model ASP1.Backend.Domain.Entities.Party
@{
    ViewData["Title"] = "Create Party";
}
<h1>Create Party</h1>
@* Start of change: Ensure no PartyId field in Create view *@
<!-- No PartyId field here, as it is auto-generated by the database -->
@* End of change: Ensure no PartyId field in Create view *@
@* Start of change: Add visible error message block for debugging *@
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="alert alert-danger">
        <strong>There was a problem saving the party:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
@* End of change: Add visible error message block for debugging *@
@* Start of change: Add validation summary and anti-forgery token *@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoUrl"></label>
        <input asp-for="LogoUrl" class="form-control" />
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@* End of change: Add validation summary and anti-forgery token *@ 
@model ASP1.Backend.Domain.Entities.Party
@{
    ViewData["Title"] = "Create Party";
}

<h1 class="mb-4">Create Party</h1>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="card" style="background-color: #fef2f2; border-color: var(--danger-color); margin-bottom: var(--spacing-md);">
        <div class="card-body">
            <strong style="color: var(--danger-color);">There was a problem saving the party:</strong>
            <ul style="margin-top: var(--spacing-xs); color: var(--danger-color);">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    </div>
}

<div class="card shadow-md">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name">Party Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter party name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter party description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoUrl">Logo URL</label>
                <input asp-for="LogoUrl" class="form-control" placeholder="https://example.com/logo.png" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>
            <div style="display: flex; gap: var(--spacing-sm); margin-top: var(--spacing-lg);">
                <button type="submit" class="btn btn-success">Create Party</button>
                <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

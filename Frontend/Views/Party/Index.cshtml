@model IEnumerable<ASP1.Backend.Domain.Entities.Party>
@{
    ViewData["Title"] = "Parties";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--spacing-lg);">
    <h1>Romanian Parties</h1>
    <a asp-action="Create" class="btn btn-success">+ Create Party</a>
</div>

<div class="card shadow-md">
    <div class="card-body" style="padding: 0;">
        <div style="overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Logo</th>
                        <th style="text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var party in Model)
                    {
                        <tr>
                            <td><strong>@party.Name</strong></td>
                            <td>@party.Description</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(party.LogoUrl) && (party.LogoUrl.StartsWith("http://") || party.LogoUrl.StartsWith("https://")))
                                {
                                    <img src="@party.LogoUrl" alt="@party.Name Logo" width="50" height="50" style="border-radius: 50%; object-fit: contain; background: white; padding: 4px;" />
                                }
                                else
                                {
                                    <div style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; border-radius: 50%; background: var(--primary-color);">
                                        <span style="color: white; font-weight: 600; font-size: 0.875rem;">@party.Name.Substring(0, Math.Min(2, party.Name.Length))</span>
                                    </div>
                                }
                            </td>
                            <td style="text-align: right;">
                                <div style="display: flex; gap: var(--spacing-xs); justify-content: flex-end;">
                                    <a asp-controller="Party" asp-action="Details" asp-route-id="@party.PartyId" class="btn btn-primary btn-sm">Details</a>
                                    <a asp-action="Edit" asp-route-id="@party.PartyId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@party.PartyId" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
